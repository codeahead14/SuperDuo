<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green06"
    android:paddingBottom="@dimen/widget_margin_small"
    android:paddingEnd="@dimen/widget_margin_normal"
    android:paddingLeft="@dimen/widget_margin_normal"
    android:paddingRight="@dimen/widget_margin_normal"
    android:paddingStart="@dimen/widget_margin_normal"
    android:paddingTop="@dimen/widget_margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/widget_margin_small">

        <ImageView
            android:id="@+id/widget_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_weight="1"
            android:textSize="@dimen/TeamNames"
            android:textColor="@color/orange14"/>

        <TextView
            android:id="@+id/widget_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/Score"
            android:textColor="@color/orange14"/>

        <TextView
            android:id="@+id/team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="@dimen/TeamNames"
            android:textColor="@color/orange14"/>
    </LinearLayout>

</FrameLayout>